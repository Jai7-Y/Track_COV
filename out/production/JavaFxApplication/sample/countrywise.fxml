<AnchorPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Countrywise">
   <children>
      <Label alignment="CENTER" layoutX="227.0" prefHeight="45.0" prefWidth="246.0" text="WORLD COVID DATA" textFill="#d73c09">
         <font>
            <Font name="Algerian" size="26.0" />
         </font>
      </Label>
      <Button fx:id="refreshBtn" layoutX="630.0" layoutY="55.0" mnemonicParsing="false" onAction="#refreshListener" style="-fx-border-color: #d73c09; -fx-border-width: 3;" text="Refresh">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField layoutX="14.0" layoutY="52.0" prefHeight="25.0" prefWidth="194.0" promptText="search country name" style="-fx-border-color: blue; -fx-border-width: 3;" />
      <TableView layoutY="100.0" prefHeight="572.0" prefWidth="700.0">
        <columns>
          <TableColumn editable="false" prefWidth="348.0" style="-fx-border-color: black; -fx-border-width: 3;" text="COUNTRY" />
          <TableColumn editable="false" prefWidth="83.0" style="-fx-border-color: red; -fx-border-width: 3;" text="CONFIRMED" />
            <TableColumn editable="false" prefWidth="91.0" style="-fx-border-color: blue; -fx-border-width: 3;" text="ACTIVE" />
            <TableColumn editable="false" prefWidth="91.0" style="-fx-border-color: green; -fx-border-width: 3;" text="RECOVERED" />
            <TableColumn editable="false" prefWidth="86.0" style="-fx-border-color: yellow; -fx-border-width: 3;" text="DEATHS" />
        </columns>
      </TableView>
      <Button fx:id="backBtn" layoutX="324.0" layoutY="672.0" mnemonicParsing="false" onAction="#backListener" style="-fx-border-color: #d73c09; -fx-border-width: 3;" text="BACK" />
   </children>
</AnchorPane>
